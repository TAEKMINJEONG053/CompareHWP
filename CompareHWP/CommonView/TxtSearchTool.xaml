<Window x:Class="CompareHWP.CommonView.TxtSearchTool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompareHWP.CommonView"
        mc:Ignorable="d"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/grid"
        Title="TXT 검색 툴 (확장 버전)"
        Width="1000"
        Height="650">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 상단 -->
        <StackPanel Orientation="Horizontal">
            <Button Content="폴더 선택"
                    Width="120"
                    Margin="0,0,10,0"
                    Click="BtnSelectFolder_Click" />

            <TextBox x:Name="TxtSearch"
                     Width="220"
                     VerticalContentAlignment="Center" />

            <Button Content="검색"
                    Width="80"
                    Margin="10,0,0,0"
                    Click="BtnSearch_Click" />
        </StackPanel>

        <!-- 메인 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 왼쪽 트리 -->
            <GroupBox Header="폴더 / 파일">
                <DockPanel>
                    <TextBlock x:Name="TxtCurrentFolder"
                               DockPanel.Dock="Top"
                               Margin="5"
                               FontWeight="Bold" />

                    <TreeView x:Name="FolderTree"
                              Margin="5"
                              SelectedItemChanged="FolderTree_SelectedItemChanged" />
                </DockPanel>
            </GroupBox>

            <!-- 오른쪽 -->
            <Grid Grid.Column="1"
                  Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 미리보기 -->
                <GroupBox Header="파일 내용">
                    <RichTextBox x:Name="TxtPreview"
                                 FontFamily="Consolas"
                                 FontSize="13"
                                 IsReadOnly="True"
                                 VerticalScrollBarVisibility="Auto" />
                </GroupBox>

                <!-- 검색 결과 -->
                <GroupBox Header="검색 결과"
                          Grid.Row="1"
                          Margin="0,5,0,0">
                    <dxc:GridControl x:Name="GridResult"
                                     AutoGenerateColumns="None">
                        <dxc:GridControl.Columns>
                            <dxc:GridColumn FieldName="FullPath"
                                            Header="파일 경로"
                                            Width="*" />
                            <dxc:GridColumn FieldName="LineNumber"
                                            Header="줄"
                                            Width="60" />
                            <dxc:GridColumn FieldName="LineText"
                                            Header="내용"
                                            Width="*" />
                        </dxc:GridControl.Columns>

                        <dxc:GridControl.View>
                            <dxc:TableView ShowGroupPanel="False"
                                           RowDoubleClick="Result_RowDoubleClick" />
                        </dxc:GridControl.View>
                    </dxc:GridControl>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>
