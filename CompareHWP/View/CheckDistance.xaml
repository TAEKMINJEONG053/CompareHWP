<UserControl x:Class="CompareHWP.View.CheckDistance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CompareHWP.View"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <!-- 배경 그라데이션 -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                <GradientStop Color="#0B1220"
                              Offset="0" />
                <GradientStop Color="#0A1A3A"
                              Offset="0.55" />
                <GradientStop Color="#0B1220"
                              Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="26">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- 헤더 -->
            <StackPanel Orientation="Vertical"
                        Margin="0,0,0,18">
                <TextBlock Text="주소 거리 계산"
                           Foreground="{StaticResource TextMain}"
                           FontSize="28"
                           FontWeight="SemiBold" />
                <TextBlock Text="주소 2개를 입력하면 직선거리(반경)를 km로 계산합니다."
                           Foreground="{StaticResource TextSub}"
                           FontSize="14"
                           Margin="0,6,0,0" />
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*" />
                    <ColumnDefinition Width="0.9*" />
                </Grid.ColumnDefinitions>

                <!-- 입력 카드 -->
                <Border Style="{StaticResource Card}"
                        Grid.Column="0"
                        Margin="0,0,18,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="주소 입력"
                                   Foreground="{StaticResource TextMain}"
                                   FontSize="18"
                                   FontWeight="SemiBold" />

                        <StackPanel Grid.Row="1"
                                    Margin="0,18,0,0">
                            <TextBlock Text="출발지 주소"
                                       Foreground="{StaticResource TextSub}"
                                       Margin="2,0,0,6" />
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding AddressA, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel Grid.Row="2"
                                    Margin="0,14,0,0">
                            <TextBlock Text="도착지 주소"
                                       Foreground="{StaticResource TextSub}"
                                       Margin="2,0,0,6" />
                            <TextBox Style="{StaticResource RoundedTextBox}"
                                     Text="{Binding AddressB, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>

                        <StackPanel Grid.Row="3"
                                    Orientation="Horizontal"
                                    Margin="0,16,0,0">
                            <Button Style="{StaticResource PrimaryButton}"
                                    Content="계산하기"
                                    Command="{Binding CalculateCommand}"
                                    Width="170"
                                    Height="42" />
                            <Button Margin="10,0,0,0"
                                    Style="{StaticResource PrimaryButton}"
                                    Background="#24314D"
                                    Content="🧹 초기화"
                                    Command="{Binding ClearCommand}"
                                    Width="170"
                                    Height="42" />
                        </StackPanel>

                        <TextBlock Grid.Row="4"
                                   Margin="0,18,0,0"
                                   Text="{Binding StatusText}"
                                   Foreground="{StaticResource TextSub}"
                                   TextWrapping="Wrap" />
                    </Grid>
                </Border>

                <!-- 결과 카드 -->
                <Border Style="{StaticResource Card}"
                        Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="결과"
                                   Foreground="{StaticResource TextMain}"
                                   FontSize="18"
                                   FontWeight="SemiBold" />

                        <StackPanel Grid.Row="1"
                                    Margin="0,18,0,0">
                            <TextBlock Text="직선거리(반경)"
                                       Foreground="{StaticResource TextSub}" />
                            <TextBlock Text="{Binding DistanceKmText, UpdateSourceTrigger=PropertyChanged}"
                                       Foreground="{StaticResource TextMain}"
                                       FontSize="34"
                                       FontWeight="SemiBold"
                                       Margin="0,6,0,0" />
                        </StackPanel>

                        <Border Grid.Row="2"
                                Background="#0E1626"
                                CornerRadius="14"
                                Padding="14"
                                Margin="0,18,0,0">
                            <StackPanel>
                                <TextBlock Text="계산 결과"
                                           Foreground="{StaticResource TextSub}"
                                           Margin="0,0,0,10" />
                                <TextBlock Text="{Binding ResultText, UpdateSourceTrigger=PropertyChanged}"
                                           Foreground="{StaticResource TextMain}" />
                            </StackPanel>
                        </Border>

                        <TextBlock Grid.Row="3"
                                   Margin="0,18,0,0"
                                   Text="※ 도로 주행거리(네비 거리)가 아니라, 위/경도 기준의 ‘직선거리’입니다."
                                   Foreground="{StaticResource TextSub}"
                                   TextWrapping="Wrap" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
