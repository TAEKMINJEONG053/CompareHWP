<Window x:Class="CheckDistance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckDistance"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <TextBox x:Name="TextBox_First" Margin="5" Height="50"/>
        <TextBox x:Name="TextBox_Second" Margin="5" Height="50"/>
        <Button Content="계산하기" Click="Button_Calculate_Click"/>
        <TextBox x:Name="TextBox_Result"
                 Margin="5"
                 Height="300"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto" />
    </StackPanel>
</Window>
